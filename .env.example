# Root environment variables

# PostgreSQL connection for Prisma (api uses this via PrismaClient)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/lca?schema=public"

# JWT secret for API auth (to be used in Sprint 1 Auth module)
JWT_SECRET="change-me-in-prod"

# Redis connection for BullMQ queue workers
REDIS_URL="redis://localhost:6379"

# Bundle Audit storage (S3 or compatible service)
BUNDLE_AUDIT_BUCKET="replace-with-your-bucket"
BUNDLE_AUDIT_PREFIX="bundle-uploads"
BUNDLE_AUDIT_REGION="us-east-1"
# Legacy fallbacks for compatibility (optional)
BUNDLE_AUDIT_S3_REGION="us-east-1"
# Optional custom endpoint/credentials for MinIO or other providers
BUNDLE_AUDIT_ENDPOINT=""
BUNDLE_AUDIT_S3_ENDPOINT=""
BUNDLE_AUDIT_FORCE_PATH_STYLE=false
BUNDLE_AUDIT_S3_FORCE_PATH_STYLE=false
BUNDLE_AUDIT_ACCESS_KEY=""
BUNDLE_AUDIT_SECRET_KEY=""
BUNDLE_AUDIT_SESSION_TOKEN=""
BUNDLE_AUDIT_S3_ACCESS_KEY=""
BUNDLE_AUDIT_S3_SECRET_KEY=""
BUNDLE_AUDIT_S3_SESSION_TOKEN=""
# Maximum ZIP size accepted by the API (set either MB or bytes)
BUNDLE_AUDIT_MAX_SIZE_MB=50
BUNDLE_AUDIT_MAX_UPLOAD_BYTES=52428800
BUNDLE_AUDIT_QUEUE_URL="redis://localhost:6379"
